<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
<div class="bg-navy d-flex align-items-center justify-content-between">
  <div class="container">
    <div class="row">
      <div class="col-auto">
        <a class="text-light" href="/"><i style="font-size: 1.8rem;" class="bi bi-arrow-left-short"></i></a>
      </div>
      <div class="col text-center">
        <h2 class="text-light">Log in</h2>
      </div>
      <div class="col-auto">
        <%= f.submit "Log in", class: "btn btn-link text-light text-decoration-none" %>
      </div>
    </div>
  </div>
</div>

<div>
  <div class="">
    <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %> 

<% end %>

<%= link_to "Forgot Password?", new_user_password_path, class: "text-decoration-none m-3" %>
</div>
